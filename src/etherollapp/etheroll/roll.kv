#:import MDSeparator kivymd.card.MDSeparator
#:import MDTextField kivymd.textfields.MDTextField
#:import MDSlider kivymd.slider.MDSlider
#:import AddressButton etherollapp.etheroll.addressbutton.AddressButton
#:import NO_ACCOUNT_SELECTED_STRING etherollapp.etheroll.constants.NO_ACCOUNT_SELECTED_STRING
#:import ROUND_DIGITS pyetheroll.constants.ROUND_DIGITS


<BetSize>:
    orientation: "vertical"
    MDLabel:
        text: "Bet size"
        font_style: 'Title'
        theme_text_color: 'Primary'
    BoxLayout:
        orientation: "horizontal"
        height: dp(50)
        size_hint_y: None
        MDTextField:
            id: bet_size_input_id
            text: "{}".format(root.min_bet_property)
            font_size: dp(20)
            input_filter: 'float'
            width: dp(40)
            size_hint_x: None
        MDSlider:
            id: bet_size_slider_id
            range: root.min_bet_property, 10
            step: 0.05

<ChanceOfWinning>:
    orientation: "vertical"
    MDLabel:
        text: "Chance of winning"
        font_style: 'Title'
        theme_text_color: 'Primary'
    BoxLayout:
        orientation: "horizontal"
        height: dp(50)
        size_hint_y: None
        MDTextField:
            id: chances_input_id
            text: "50"
            font_size: dp(20)
            input_filter: 'int'
            width: dp(40)
            size_hint_x: None
        MDSlider:
            id: chances_slider_id
            range: 0, 100
            step: 1


<RollUnderRecap>:
    cols: 2
    height: self.minimum_height
    MDLabel:
        text: 'Roll under'
        font_style: 'Headline'
        theme_text_color: 'Primary'
        size_hint_y: None
        height: dp(70)
    MDLabel:
        text: '{}'.format(int(root.roll_under_property))
        font_style: 'Display3'
        theme_text_color: 'Primary'
        halign: 'right'
    MDLabel:
        text: 'With a wager of'
        theme_text_color: 'Primary'
        size_hint_y: None
        height: dp(20)
    MDLabel:
        text: '{0:.{1}f} ETH'.format(root.wager_property, ROUND_DIGITS)
        theme_text_color: 'Primary'
        halign: 'right'
    MDLabel:
        text: 'For a profit'
        theme_text_color: 'Primary'
        size_hint_y: None
        height: dp(20)
    MDLabel:
        text: '+{0:.{1}f} ETH'.format(root.profit_property, ROUND_DIGITS)
        theme_text_color: 'Primary'
        halign: 'right'


<RollScreen>:
    on_pre_enter:
        root.fetch_update_balance()
    BoxLayoutMarginLayout:
        orientation: "vertical"
        AddressButton:
            text: root.current_account_string or NO_ACCOUNT_SELECTED_STRING
            on_release: app.root.open_address_options()
        BoxLayoutAddMargin:
            orientation: "vertical"
            margin: 30, 10, 30, 10
            MDLabel:
                text: "Balance: {} ETH".format(root.balance_property)
                text: "Balance: {0:.{1}f} ETH".format(root.balance_property, ROUND_DIGITS)
                font_style: 'Headline'
                theme_text_color: 'Primary'
            MDLabel:
                text: "Place your bet"
                font_style: 'Headline'
                theme_text_color: 'Primary'
            BetSize:
                id: bet_size_id
            ChanceOfWinning:
                id: chance_of_winning_id
            PushUp:
            RollUnderRecap:
                id: roll_under_recap_id
            PushUp:
            AnchorLayout:
                MDRaisedButton:
                    id: roll_button_id
                    text: "Roll"
                    size_hint_x: 0.7
